      \node[inner sep=0pt, outer sep=0pt] at (center) {\includegraphics[width = \the\paperwidth, height = \the\paperheight]{bg_titlepage}};

      \node[align = center, inner sep=0pt, outer sep=0pt, anchor = south, above of = center] (title) {\usebeamerfont{title}\inserttitle};
